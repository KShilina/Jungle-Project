<div class="container">
  <h1 class="mt-4">Admin Dashboard</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Number of Products</h5>
          <p class="card-text"><%= link_to @product_count, admin_products_url %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Number of Categories</h5>
          <p class="card-text"><%=  @category_count %></p>
        </div>
      </div>
    </div>
  </div>
</div>
