<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <!--span class="badge bg-success">Active</span>
    <span class="badge bg-danger">Finished</span>
    <span class="badge bg-warning">Upcoming</span>-->
    <% if sale.finished? %>
      <span class="badge bg-danger">Finished</span>
    <% elsif sale.upcoming?%>
      <span class="badge bg-warning">Upcoming</span>
    <% else %>
      <span class="badge bg-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off%>
  </td>
</tr>
